{
  "name": "servebolt/servebolt-wp-optimize-plugin",
  "type": "wordpress-plugin",
  "license": "GPLv3 or later",
  "description": "A plugin that implements Servebolt Security & Performance best practises for WordPress.",
  "minimum-stability": "dev",
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:Servebolt/php-sdk.git"
    }
  ],
  "authors": [
    {
      "name": "Robert SÃ¦ther",
      "email": "robert@servebolt.com"
    },
    {
      "name": "Erlend Eide",
      "email": "erlend@servebolt.com"
    },
    {
      "name": "Thomas Audunhus",
      "email": "thomas@servebolt.com"
    }
  ],
  "require": {
    "php": "^7.3",
    "composer/installers": "~1.2",
    "servebolt/sdk": "1.0.0-beta.5"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "wp-coding-standards/wpcs": "*",
    "phpcompatibility/php-compatibility": "*",
    "phpunit/phpunit": "7.5.20",
    "phan/phan": "^4.0",
    "overtrue/phplint": "9999999-dev"
  },
  "extra": {
    "installer-name": "servebolt-wp-optimize-plugin",
    "hooks": {
      "pre-push": [
        "test",
        "phpunit"
      ],
      "post-merge": "composer update"
    }
  },
  "keywords": [
    "blocks",
    "editor",
    "gutenberg",
    "plugin",
    "wordpress"
  ],
  "autoload": {
    "files": [
      "src/Servebolt/Helpers/Helpers.php",
      "src/Servebolt/CachePurge/ThirdPartyFunctions.php"
    ],
    "classmap": [
      "vendor_prefixed/"
    ],
    "psr-4": {
      "Servebolt\\Optimizer\\": "src/Servebolt"
    },
    "exclude-from-classmap": ["src/Servebolt/Database/Migrations/"]
  },
  "config": {
    "platform": {
      "php": "7.3"
    }
  },
  "scripts": {
    "phpunit": [
      "./vendor/phpunit/phpunit/phpunit"
    ],
    "phpunit-mu": [
      "./vendor/phpunit/phpunit/phpunit -c phpunit-mu.xml"
    ],
    "install-wp-test": ["ci/install-wp-tests.sh"],
    "test": ["ci/phpcs.sh","ci/phplint.sh","ci/phan.sh"],
    "post-install-cmd": [
      "[ -f vendor/bin/phpcs ] && \"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs || true"
    ],
    "post-update-cmd": [
      "[ -f vendor/bin/phpcs ] && \"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs || true"
    ],
    "prefix-dependencies": [
      "composer prefix-guzzlehttp-client"
    ],
    "prefix-guzzlehttp-client": [
      "vendor/servebolt/sdk/ci/php-scoper.phar add-prefix --prefix=ServeboltOptimizer_Vendor --output-dir=./vendor_prefixed/guzzlehttp --config=vendor/servebolt/sdk/config/php-scoper/guzzlehttp.inc.php --force --quiet",
      "vendor/servebolt/sdk/ci/php-scoper.phar add-prefix --prefix=ServeboltOptimizer_Vendor --output-dir=./vendor_prefixed/psr --config=vendor/servebolt/sdk/config/php-scoper/psr.inc.php --force --quiet"
    ],
    "compile-di": [
      "composer du --no-scripts"
    ],
    "post-autoload-dump": [
      "composer prefix-dependencies",
      "composer compile-di"
    ]
  }
}
